@model IEnumerable<skill.Models.menuMst>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Menu Master</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="myGrid" class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParentMenuID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.IsAdminPage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowInMenu)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.SeqNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var parentName = string.Empty;
            if (item.ParentMenuID > 0)
            {
                var obj = Model.Where(s => s.MenuID == item.ParentMenuID).FirstOrDefault();
                parentName = obj != null ? obj.Name : string.Empty;
            }

            <tr>
                <td>
                    @parentName
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsAdminPage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.URL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowInMenu)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SeqNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MenuID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MenuID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MenuID })
                </td>
            </tr>
        }
    </tbody>
</table>