@model skill.Models.ContactUsModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Contactus", FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].ContactNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Emailid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactUs[0].IsDeleted)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ContactUs) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emailid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Contactusid }) |
            @Html.ActionLink("Details", "Details", new { id=item.Contactusid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Contactusid })
        </td>
    </tr>
}

    </table>
    <table class="pager-table" cellpadding="0" cellspacing="0">
        <tr>
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <td>
                    @if (i != Model.CurrentPageIndex)
                    {
                        <a href="javascript:PagerClick(@i);">@i</a>
                    }
                    else
                    {
                        <span>@i</span>
                    }
                </td>
            }
        </tr>
    </table>
    <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />
}
<script type="text/javascript">
    function PagerClick(index) {
        document.getElementById("hfCurrentPageIndex").value = index;
        document.forms[0].submit();
    }
</script>
<style type="text/css">
    .pager-table td {
        padding: 4px;
    }
</style>
